#!/bin/bash +x

ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )/../" && pwd )"

. "${ROOT}"/bin/lib/env.sh
. "${ROOT}"/bin/lib/tty.sh
. "${ROOT}"/docker/lib/images.sh
. "${ROOT}"/docker/lib/php_image.sh

docker run \
    -i${TTY} \
    --rm \
    -v "$(pwd)":/app \
    -w /app \
	--link web:dockermachine.local \
	--net ${PROJECT_NAME}_default \
	${RESOLVED_PHP_IMAGE} php "$@"
